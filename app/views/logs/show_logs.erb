<h1 style="color: white; margin: 30px 10px;"><%= @log.entry %> tasks are $<%= @log.tasks.collect {|e| e.amount}.sum %></h1>

<div class="container" >
  <div class="row">
    <div class="jumbotron" style="background: white; border-radius:20px;">
      <% if flash.has?(:message) %>
      <div class="alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <p><%= flash[:message] %> </p>
      </div>
      <% end %>
      <table class="table table-hover table-striped" >
      <tr class="info">
        <th><h3>Description</h3></th>
        <th><h3>Amount</h3></th>
        <th><h3>Date</h3></th>
        <th><h3></h3></th>
      </tr>
        <% @log.tasks_sort_by_date.each do |task| %>
          <tr style="text-align:left;">
            <td><%= task.description %></td>
            <td>$ <%= task.amount %></td>
            <td><%= task.date %></td>
            <td><a href="tasks/<%= task.id %>/edit">Edit <span class="glyphicon glyphicon-pencil"></span></a></td>
          </tr>
        <% end %>
      </table>
    </div><!-- end well -->
  </div><!-- end row -->
</div><!-- end container -->