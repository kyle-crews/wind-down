<h1 style="color: white; margin: 30px 10px;">YOUR <strong>// LOGS //</strong></h1>

<div class="container" >
  <div class="row">
    <div class="jumbotron" style="background: white; border-radius:20px;">
      <% if flash.has?(:message) %>
      <div class="alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <p><%= flash[:message] %> </p>
      </div>
      <% end %>
        <% current_user.logs_sort_by_date.each do |log| %>
          <tr style="text-align:left;">
            <td><strong><%= log.day.name %></strong></td>
            <td><a href="logs/<%= log.id %>/edit"> // Edit <span class="glyphicon glyphicon-pencil"></span></a></td>
            <h3><strong>GOOD</strong> that happened</h3>
            <td><a href="logs/<%= log.id %>"><%= log.description %></a></td>
            <h3><strong>ACCOMPLISHED</strong> today</h3>
            <td><%= log.amount %></td>
            <h3><strong>FIRST TASK</strong> in the morning</h3>
            <td><%= log.date %></td>
            <p> </p>
            <p>__________________________________________________</p>
          </tr>
        <% end %>
      </table>
    </div><!-- end well -->
  </div><!-- end row -->
</div><!-- end container -->

